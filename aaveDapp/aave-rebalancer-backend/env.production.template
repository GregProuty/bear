# Production Environment Configuration Template
# Copy this to .env in your production environment

# Application
NODE_ENV=production
PORT=4000

# Database
DATABASE_URL=postgresql://aave_user:YOUR_SECURE_PASSWORD@postgres:5432/aave_rebalancer_prod
POSTGRES_PASSWORD=YOUR_SECURE_PASSWORD

# RPC URLs (Use your own RPC providers - Alchemy, Infura, etc.)
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY
BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_API_KEY
OPTIMISM_RPC_URL=https://opt-mainnet.g.alchemy.com/v2/YOUR_API_KEY
ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR_API_KEY
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# Vault Addresses (Deploy your vaults first)
AAVE_VAULT_BASE=0xa189176b780Db31024038aD1C8080f62d87d5aea
AAVE_VAULT_ETHEREUM=
AAVE_VAULT_OPTIMISM=
AAVE_VAULT_ARBITRUM=
AAVE_VAULT_POLYGON=

# Security
CORS_ORIGIN=https://your-frontend-domain.com
JWT_SECRET=your-super-secure-jwt-secret-here

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn-here

# Cron Jobs
ENABLE_CRON_JOBS=true
DATA_COLLECTION_CRON=0 0 11 * * *  # 11 AM PST daily
PERFORMANCE_CALC_CRON=0 5 11 * * *  # 11:05 AM PST daily

# Frontend URL
FRONTEND_URL=https://your-frontend-domain.com 