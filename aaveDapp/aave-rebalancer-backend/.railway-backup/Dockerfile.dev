FROM node:18-alpine

WORKDIR /app

# Install dependencies for node-gyp (needed for some native modules)
RUN apk add --no-cache python3 make g++

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Create logs directory
RUN mkdir -p logs

# Expose port
EXPOSE 4000

# Start development server
CMD ["npm", "run", "dev"] 