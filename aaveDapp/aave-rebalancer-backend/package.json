{
  "name": "aave-rebalancer-backend",
  "version": "1.0.0",
  "description": "GraphQL backend for AAVE rebalancer performance tracking",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:prod": "npm run build && npm run start",
    "postinstall": "npm run build",
    "db:migrate": "tsx src/database/migrate.ts",
    "db:seed": "tsx src/database/seed.ts",
    "db:clear-mock": "tsx src/database/clear-mock-data.ts",
    "cron:dev": "tsx src/cron/index.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@apollo/server": "^4.10.4",
    "@as-integrations/fastify": "^2.1.1",
    "@fastify/cors": "^9.0.1",
    "axios": "^1.7.7",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "ethers": "^6.13.2",
    "fastify": "^4.28.1",
    "graphql": "^16.9.0",
    "graphql-scalars": "^1.23.0",
    "graphql-tag": "^2.12.6",
    "node-cron": "^3.0.3",
    "pg": "^8.12.0",
    "winston": "^3.14.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.6",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.11.10",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.18.0",
    "jest": "^29.7.0",
    "pino-pretty": "^13.0.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "keywords": [
    "aave",
    "rebalancer",
    "graphql",
    "performance",
    "defi"
  ],
  "author": "AAVE Rebalancer Team",
  "license": "MIT"
}
